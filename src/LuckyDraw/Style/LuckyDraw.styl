backlight($x, $y, $spread, $size, $colorA, $colorB, $duration)
  &:after
    position absolute
    content ""
    top $y
    left $x
    right 0
    z-index 1
    height 100%
    width 100%
    margin 0 auto
    transform scale($size)
    filter blur($spread)
    background linear-gradient(270deg, $colorA, $colorB)
    background-size 200% 200%
    animation animateGlow $duration ease infinite

.compass__container
  width 100%
  height 100%
  display inline-block
  animation textColor 10s ease infinite
  position relative
  box-shadow 0px 10px 50px rgba(0, 0, 0, 0.85)
  backlight 0, 5vw, 5vw, 0.85, #0fffc1, #7e0fff, 5s
  &.rolling:after
    animation none

.compass__arrow
  position absolute
  height 50px
  width 100%
  top 0
  z-index 10
  text-align center
  &:before
    content: "";
    top 200%
    width 0
    height: 0
    border-left 20px solid transparent
    border-right 20px solid transparent
    border-top 100px solid lighten(darkred, 40%);
    position relative
    z-index 10

//&:before

.control__panel
  position relative
  height calc(100% - 74px)
  width calc(100% - 24px)
  margin 0 auto
  padding-top 50px
  overflow hidden
  border 12px solid darkorange
  display: flex
  flex-wrap nowrap
  flex-direction column
  align-items center
  justify-content flex-start
  background-color darken(#fff, 4%);
  z-index 2
  box-shadow inset 0px 2px 40px rgba(0, 0, 0, 0.45);

.compass__spin
  width 100%
  height 100%
  z-index 2
  transition-property transform
  transition-timing-function ease-out
  animation-fill-mode forwards

.compass__btn
  position absolute
  text-align center
  bottom -50px
  z-index 100
  display inline-block
  width 100%
  .bttn-jelly.bttn-danger
    font-size 16px
    padding 10px 20px

@keyframes animateGlow
  0%
    background-position: 0% 50%

  50%
    background-position: 100% 50%
  100%
    background-position: 0% 50%
